
<%# app/views/ui/smoke.html.erb

This helps us check that the plugins are loading correctly

%>



<h3>Plugin Smoke Test</h3>
<% use_plugin :chartist, :datepicker, :ckeditor %>

<div class="row">
  <div class="col-md-6">
    <div id="chart-smoke" class="ct-chart"></div>
  </div>
  <div class="col-md-6">
    <input type="text" id="dp" class="form-control" placeholder="Pick a date" />
  </div>
</div>

<div class="mt-3" data-controller="editor">
  <textarea data-editor-target="area" class="form-control" rows="6">Hello editor</textarea>
</div>

<% content_for :page_scripts do %>
  <script>
      document.addEventListener("turbo:render", () => {
          if (window.Chartist) {
              new Chartist.Line('#chart-smoke', { labels: ['M','T','W','T','F'], series: [[1,2,3,2,5]] });
          }
          const dp = document.getElementById('dp');
          if (dp && window.$ && $(dp).datepicker) { $(dp).datepicker(); }
      });
  </script>
<% end %>
