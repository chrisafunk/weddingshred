<div class="authincation h-100">
  <div class="container h-100">
    <div class="row justify-content-center h-100 align-items-center">
      <div class="col-md-6">
        <div class="authincation-content">
          <div class="row no-gutters">
            <div class="col-xl-12">
              <div class="auth-form">
                <div class="text-center mb-3">
                  <%= image_tag "logo-full.png", alt: "", class: "img-half" %>
                </div>
                <h4 class="text-center mb-4">Sign in your account</h4>
                <%= form_with scope: :user, url: session_path(:user), local: true do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
                  </div>
                  <div class="mb-4 position-relative">
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                    <span class="show-pass eye">
												<i class="fa fa-eye-slash"></i>
												<i class="fa fa-eye"></i>
											</span>
                  </div>
                  <div class="text-center">
                    <%= f.submit "Sign me in", class: "btn btn-primary light btn-block" %>
                  </div>
                <% end %>
                <div class="new-account mt-3">
                  <p>Don't have an account? <a class="text-primary" href="<%= new_user_registration_path %>">Sign up</a></p>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
